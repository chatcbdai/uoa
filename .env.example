# LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4o
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Browser Configuration
DEFAULT_BROWSER_ENGINE=stealth
HEADLESS_MODE=true
ANTI_DETECTION=true
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080
# CUSTOM_USER_AGENT=Mozilla/5.0...  # Optional custom user agent
# PROXY_URL=http://proxy.example.com:8080  # Optional proxy

# Execution Settings
MAX_CONCURRENT_TASKS=3
TASK_TIMEOUT=300
RATE_LIMIT=1.0
RETRY_MAX_ATTEMPTS=3
RETRY_DELAY=1.0
CACHE_TTL=3600

# Storage Settings
DATA_DIR=./data
SCREENSHOTS_DIR=./screenshots
RESULTS_DIR=./results
CACHE_DIR=./cache
DB_PATH=./data/assistant.db